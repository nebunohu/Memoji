include  ./components/card/card

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        title Memoji
        //link(rel="stylesheet" type="text/css" href="style.css")
    body
        header
            span Memoji
        
        main
            .modalWindow
                .modalWindow__popupWindow(class="afterGame")
                    .popupText
                        span(class="letter" id="l1") L
                        span(class="letter" id="l2") o
                        span(class="letter" id="l3") s
                        span(class="letter" id="l4") e
                    .button
                        span Try again
                //.modalWindow__popupWindow(class="beforeGame visible")
                    input(class="difficultyLevel" type="radio" name="difficultyLevel" value="low" checked="checked") 
                    span Низкий
                    input(class="difficultyLevel" type="radio" name="difficultyLevel" value="medium") 
                    span Средний
                    input(class="difficultyLevel" type="radio" name="difficultyLevel" value="hard") 
                    spat Высокий
                    .button
                        span Start game
            .menuBlock
                .menuBlock__burgerButton
                    .menuBlock__menuButtonBar
                    .menuBlock__menuButtonBar
                    .menuBlock__menuButtonBar
                .menuBlock__list
                    ul
                        li Новая игра
                        li Уровень сложности
                        li Таблица рекордов

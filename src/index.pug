include  ./components/card/card

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        title Memoji
        //link(rel="stylesheet" type="text/css" href="style.css")
    body
        header
            span Memoji
        
        main
            .modalWindow(class="visible")
                .popupWindow(class="afterGame")
                    .popupText
                        span(class="letter1") L
                        span(class="letter2") o
                        span(class="letter3") s
                        span(class="letter4") e
                    .button
                        span Try again
                .popupWindow(class="beforeGame visible")
                    input(class="difficultyLevel" type="radio" name="difficultyLevel" value="low" checked="checked") 
                    span Низкий
                    input(class="difficultyLevel" type="radio" name="difficultyLevel" value="medium") 
                    span Средний
                    input(class="difficultyLevel" type="radio" name="difficultyLevel" value="hard") 
                    spat Высокий
                    .button
                        span Start game
            .cardsContainer(id="cards_container")            
                +card("card0")
                +card("card1")
                +card("card2")
                +card("card3")
                +card("card4")
                +card("card5")
                +card("card6")
                +card("card7")
                +card("card8")
                +card("card9")
                +card("card10")
                +card("card11")
            .timerWrapper 01:00 
        footer

        script(src="./src/script.js") 
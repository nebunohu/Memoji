                .playground__cardsContainer(id="cards_container")            
                    +card({block: "playground", cardId: "card0"})
                    +card({block: "playground", cardId: "card1"})
                    +card({block: "playground", cardId: "card2"})
                    +card({block: "playground", cardId: "card3"})
                    +card({block: "playground", cardId: "card4"})
                    +card({block: "playground", cardId: "card5"})
                    +card({block: "playground", cardId: "card6"})
                    +card({block: "playground", cardId: "card7"})
                    +card({block: "playground", cardId: "card8"})
                    +card({block: "playground", cardId: "card9"})
                    +card({block: "playground", cardId: "card10"})
                    +card({block: "playground", cardId: "card11"})
                .playground__timerWrapper 01:00 
        footer

        script(src="./src/script.js") 